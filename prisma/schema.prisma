generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now()) @map("created_at")
  
  @@map("users")
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  price       Float
  image       String
  rating      Float
  category    String
  description String

  @@map("products")
}